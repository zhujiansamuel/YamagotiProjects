# Django 配置
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_ENV=dev

# 数据库配置
# 开发环境：直接连接 PostgreSQL
# 生产环境：通过 PgBouncer 连接
USE_PGBOUNCER=false
DATABASE_URL=postgres://samuelzhu:YOUR_PASSWORD@127.0.0.1:5433/applestockchecker_dev

# PgBouncer 配置（当 USE_PGBOUNCER=true 时使用）
PGBOUNCER_HOST=127.0.0.1
PGBOUNCER_PORT=6432
PGBOUNCER_DATABASE=applestockchecker_dev
PGBOUNCER_USER=samuelzhu
PGBOUNCER_PASSWORD=YOUR_PASSWORD

# PostgreSQL 直连配置（当 USE_PGBOUNCER=false 时使用）
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5433
POSTGRES_DATABASE=applestockchecker_dev
POSTGRES_USER=samuelzhu
POSTGRES_PASSWORD=YOUR_PASSWORD

# Redis 配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# Celery 配置
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
CELERY_CONCURRENCY_DEFAULT=4
CELERY_CONCURRENCY_WEBSCRAPER=2

# WebScraper API
WEB_SCRAPER_API_TOKEN=your-webscraper-api-token
WEB_SCRAPER_WEBHOOK_TOKEN=your-webhook-token

# CORS 配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 其他配置
TREND_MAX_LOOKBACK_DAYS=90
TREND_DB_MAX_WORKERS=6
